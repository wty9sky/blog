---
import ServiceCard from "@components/labs/ServiceCard.astro";

interface Props {
  groups: ServicesGroup[];
}

const { groups } = Astro.props;
---

{
  groups.map((group) => (
    <div class="mt-16">
      <h3>{group.name}</h3>
      <ul class="mt-4 grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        {group.services.map((service) => (
          <ServiceCard
            name={service.name}
            app={service.app}
            url={service.url}
            method={service.method}
            status={service.status}
          />
        ))}
      </ul>
    </div>
  ))
}
