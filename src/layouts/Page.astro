---
import Layout from "@layouts/Layout.astro";

interface Props {
  title: string;
  heading: string;
  caption: string;
}

const { title, heading, caption } = Astro.props;
---

<Layout
  title={title}
  pathItems={[{ title: title, url: "" }]}
  description=""
  keywords={[]}
>
  <main class="page">
    <section class="page__banner-wrapper">
      <div class="banner">
        <h1 class="banner__heading">{heading}</h1>
        <h5 class="banner__caption">{caption}</h5>
      </div>
    </section>
    <slot />
  </main>
</Layout>
